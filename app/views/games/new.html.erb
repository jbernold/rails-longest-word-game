<h1>New Game</h1>

<% @letters.each do |letter| %>
  <%= letter %> &nbsp;
<% end %>
<p>What is the longest word you can find?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag name="letters", value = @letters %>
  <input type="text" name="word" placeholder="Type your word in here">
  <input type="submit">
</form>

